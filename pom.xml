<project xmlns="http://maven.apache.org/POM/4.0.0" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.loomdev</groupId>
    <artifactId>loom-root</artifactId>
    <packaging>pom</packaging>
    <version>1.17.1</version>

    <modules>
        <module>api</module>
        <module>server</module>
    </modules>

    <name>Loom</name>
    <url>https://loomdev.org/</url>

    <issueManagement>
        <url>https://github.com/LoomDev/Loom/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

    <licenses>
        <license>
            <name>MIT</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/LoomDev/Loom</url>
        <connection>scm:git:git://github.com/LoomDev/Loom.git</connection>
        <developerConnection>scm:git:git@github.com:LoomDev/Loom.git</developerConnection>
    </scm>

    <properties>
        <maven.compiler.source>16</maven.compiler.source>
        <maven.compiler.target>16</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <minecraft.version>${project.version}</minecraft.version>
        <api.version>${project.version}</api.version>
    </properties>

    <dependencies>
        <!-- Development -->
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>21.0.1</version>
        </dependency>
    </dependencies>

</project>
